  "editor.tabSize": 2,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "notebook.formatOnSave.enabled": true,
  "cSpell.words": [
    "checkpointer",
    "deepseek",
    "dotenv",
    "langchain",
